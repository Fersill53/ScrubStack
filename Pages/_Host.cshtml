@page "/"
@namespace ScrubStack.Components.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ScrubStack</title>
    <base href="~/" />
    
    <!-- ✅ Core site styles -->
    <link href="bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="app.css" rel="stylesheet" />
    <link href="ScrubStack.styles.css" rel="stylesheet" />
    <!--<link rel="icon" type="image/x-icon" href="favicon.ico" /> -->

    <!-- ✅ Blazorise styles for Bootstrap5 -->
    <link href="_content/Blazorise/blazorise.css" rel="stylesheet" />
    <link href="_content/Blazorise.Bootstrap5/blazorise.bootstrap5.css" rel="stylesheet" />
    <link href="_content/Blazorise.Icons.FontAwesome/blazorise.icons.fontawesome.css" rel="stylesheet" />
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <!-- ✅ Blazor scripts -->
    <script src="_framework/blazor.server.js"></script>

    <!-- ✅ Blazorise scripts -->
    <script src="_content/Blazorise/blazorise.js"></script>
</body>
</html>
