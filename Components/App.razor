@using Microsoft.AspNetCore.Components.Authorization
@using ScrubStack.Components.Layout

<HeadContent>
    <link rel="stylesheet" href="_content/ScrubStack/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="_content/ScrubStack/app.css" />
    <link rel="stylesheet" href="ScrubStack.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
</HeadContent>

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
